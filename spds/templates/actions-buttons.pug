- const PAGE = "Buttons"
include includes/base
  include documentation/header
  include documentation/main
    section.container
      .row
        .col.col-12
          .block
            h2.h5.doc-page-subtitle Core components / Actions
            h1.h1.doc-page-title=PAGE
            p.doc-desc Tại Shopbase, chúng tôi xây dựng một trải nghiệm tuyệt vời để phục vụ merchants bắt đầu, vận hành, và mở rộng doanh nghiệp của họ. Những giá trị cốt lõi sau của ShopBase Product Design System luôn được chúng tôi lấy làm tiền đề khi xây dựng ShopBase.
          .block
            h3.h3 Regular buttons
            .group.m
              +button.primary Primary button
              +button.secondary Secondary button
              +button Neutral button
              +button.subtle Subtle button
              +button(url="http://localhost:7879/juskteez.github.io/shopbase/spds/form-text_field.html").danger Danger button
              +button(icon="settings") Settings
          .block
            h3.h3 Small buttons
            .group.m
              +button.sml.primary Primary button
              +button.sml.secondary Secondary button
              +button.sml Neutral button
              +button.sml.subtle Subtle button
              +button.sml(url="http://localhost:7879/juskteez.github.io/shopbase/spds/form-text_field.html").danger Danger button
              +button.sml(icon="settings") Settings
          .block
            h3.h3 Emphasis buttons
            .group.m
              +button.emp.primary Primary button
              +button.emp.secondary Secondary button
              +button.emp Neutral button
              +button.emp.subtle Subtle button
              +button.emp(url="http://localhost:7879/juskteez.github.io/shopbase/spds/form-text_field.html").danger Danger button
              +button.emp(icon="settings") Settings
          .block
            h3.h3 Disabled buttons
            .group.m
              +button(off=true).primary Primary button
              +button(off=true).secondary Secondary button
              +button(off=true) Neutral button
              +button(off=true).subtle Subtle button
              +button(off=true, url="http://localhost:7879/juskteez.github.io/shopbase/spds/form-text_field.html").danger Danger button
              +button(off=true, icon="settings") Settings
          .block
            h3.h3 Progression buttons
            .group.m
              +button.progress.primary(progress=66) Primary button
              +button.progress.secondary(progress=34.5) Secondary button
              +button.progress(progress=80) Neutral button
              +button.progress.subtle(progress=20) Subtle button
              +button.progress(progress=97,url="http://localhost:7879/juskteez.github.io/shopbase/spds/form-text_field.html").danger Danger button
              +button.progress(progress=43,icon="settings") Settings
          .block
            h3.h3 Loading buttons
            .group.m
              +button.loading.primary Primary button
              +button.loading.secondary Secondary button
              +button.loading Neutral button
              +button.loading.subtle Subtle button
              +button.loading(url="http://localhost:7879/juskteez.github.io/shopbase/spds/form-text_field.html").danger Danger button
              +button.loading(icon="settings") Settings

  include documentation/footer